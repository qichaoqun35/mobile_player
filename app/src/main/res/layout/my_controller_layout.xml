<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_player_status"
            android:gravity="center">

            <TextView
                android:id="@+id/controller_video_name"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="视频名称"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/controller_video_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_battery_60"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/controller_video_tiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:00:01"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_player_top_control"
            android:layout_gravity="center">

            <Button
                android:id="@+id/controller_video_vioce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/controller_video_vioce_selector"/>

            <SeekBar
                android:id="@+id/controller_video_vioce_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="6dp"
                android:maxHeight="6dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:progress="20"
                android:progressDrawable="@drawable/progress_horizontal"
                android:thumb="@drawable/progress_thumb"/>

            <Button
                android:id="@+id/controller_video_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/controller_video_about_selector"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_player_bottom_control"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/controller_video_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:02"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <SeekBar
                android:id="@+id/controller_video_time_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="6dp"
                android:maxHeight="6dp"
                android:layout_weight="1"
                android:progress="20"
                android:progressDrawable="@drawable/progress_horizontal"
                android:thumb="@drawable/progress_thumb"/>

            <TextView
                android:id="@+id/controller_video_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:01"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/controler_video_button_ext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/controller_video_button_exit_selector"/>

            <Button
                android:id="@+id/controler_video_button_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/controller_video_pre_selector"/>

            <Button
                android:id="@+id/controler_video_button_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/controller_video_pause_selector"/>

            <Button
                android:id="@+id/controler_video_button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/controller_video_next_selector"/>

            <Button
                android:id="@+id/controler_video_button_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/controller_video_full_screen_selector"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>