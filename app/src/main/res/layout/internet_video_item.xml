<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/video_corver_layout"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/internet_video_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/video_default"/>

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignRight="@+id/internet_video_cover"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/center_collect_play"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_corver_layout"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/video_corver_layout"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/internet_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频名称"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/internet_video_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="视频简介"/>

    </LinearLayout>

</RelativeLayout>